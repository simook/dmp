<%= render 'nav' %>
<div class="container-fluid">
  <div class="row-fluid">
    <div class="span12">
      <div class="box">
        <div class="tab-header">Employment History</div>
        <table class="table table-condensed box">
          <thead>
            <tr>
              <th>Corporation</th>
              <th>Start Date</th>
            </tr>
          </thead>
          <tbody>
            <% @info.employmentHistory.each do |e| %>
            <tr>
              <td><%= link_to id_to_name(e.corporationID), user_corporation_path(@user, e.corporationID) %></td>
              <td><%= e.startDate %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>