<%= render 'nav' %>
<div class="container-fluid">
  <% if @corpadmin %>
  <div class="row-fluid">
    <div class="span3">
      <div class="black-box">
        <div class="tab-header">Account Balance</div>
        <div class="separator">
          <span data-bind="text:totalAccountBalance"></span>
        </div>
      </div>
    </div>
    <div class="span3">
      <div class="black-box">
        <div class="tab-header">
          <span data-bind="text:starbaseList().length"></span> Starbase
        </div>
        <!-- ko foreach: starbaseList -->
        <div class="separator starbase">
          <span class="title" data-bind="name:type_id"></span>
          <span class="state" data-bind="state:state"></span>
        </div>
        <!-- /ko -->
      </div>
    </div>
  </div>
  <% end %>
  <div class="row-fluid">
    <div class="span12" data-bind="with: sheet">
      <div class="row-fluid">
        <div class="span6">
          <div class="box">
            <div class="tab-header">
              <span data-bind="text:ticker"></span> Info
              <span class="pull-right muted last-updated" data-bind="date:'Last Updated: '+updated_at"></span>
            </div>
            <table class="table table-condensed box">
              <tbody>
                <tr>
                  <td><b>CEO</b></td>
                  <td data-bind="text:ceo_name"></td>
                </tr>
                <tr>
                  <td><b>Location</b></td>
                  <td data-bind="text:station_name"></td>
                </tr>
                <tr>
                  <td><b>Members</b></td>
                  <td data-bind="text:member_count"></td>
                </tr>
                <tr>
                  <td><b>Shares</b></td>
                  <td data-bind="text:shares"></td>
                </tr>
                <tr>
                  <td><b>Tax Rate</b></td>
                  <td data-bind="text:tax_rate+'%'"></td>
                </tr>
                <tr>
                  <td><b>Alliance</b></td>
                  <td data-bind="text:alliance_name"></td>
                </tr>
              </tbody>
            </table>

          </div>
        </div>
        <div class="span6">
          <div class="box">
            <div class="tab-header">
              <span data-bind="text:ticker"></span> Description
              <span class="pull-right muted last-updated" data-bind="date:'Last Updated: '+updated_at"></span>
            </div>
            <div class="padded">
              <p data-bind="text:description"></p>
            </div>
          </div>
        </div>
      </div>
      <div class="box">
        <div class="tab-header">Corp Features</div>
        <div class="padded">
          <p class="lead" data-bind=>This isn't ready yet, but here's what you have to look forward too.</p>
          <div class="row-fluid">
            <div class="span3">
              <h4>Character Overview</h4>
              <p>Get up-to-date info on your character/s.</p>
            </div>
            <div class="span3">
              <h4>Corporation Management</h4>
              <p>Track jobs and compare market prices.</p>
            </div>
            <div class="span3">
              <h4>EVE Market</h4>
              <p>Find the best buy/sell prices.</p>
            </div>
            <div class="span3">
              <h4>Knowledge Base</h4>
              <p>Learn or share your EVE knowledge with fellow members.</p>
            </div>
          </div>
          <div class="row-fluid">
            <div class="span3">
              <h4>Live System Info</h4>
              <p>Get the latest info to help you stay alive.</p>
            </div>
            <div class="span3">
              <h4>And Much More</h4>
              <p>This barely touches the surface, but it's basically going to kickass.</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
  dmp.corporation.init();
  <% if @corpadmin %>
    dmp.corporation.admin();
    dmp.corporation.starbaselist();
    dmp.corporation.memberstracking();
  <% end %>
</script>