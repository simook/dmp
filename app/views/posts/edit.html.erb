<% content_for :breadcrumb do %>
  <li><%= link_to 'Articles', posts_path %></li>
  <li class="active"><%= link_to 'Editing Article', edit_post_path(@post) %></li>
<% end %>
<div class="container-fluid">
  <div class="row-fluid">
    <div class="span12">
      <div class="box">
        <div class="tab-header">
          New Article
        </div>
        <div class="padded">
          <%= simple_form_for @post, :html => {:class => 'form-horizontal clearfix'} do |f| %>
            <%= f.input :title, :input_html=>{:class => 'input-wide'} %>
            <%= f.input :content, :input_html=>{:class => 'input-wide wysiwyg'} %>
            <%= f.hidden_field :created_by, :value => current_user.id %>
            <div class="controls">
              <%= link_to 'Cancel', posts_path, :class => 'btn' %>
              <%= f.button :submit, :class => 'btn-primary' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
