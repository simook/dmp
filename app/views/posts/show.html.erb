<% content_for :breadcrumb do %>
  <li><%= link_to 'Articles', posts_path %></li>
  <li class="active"><%= link_to @post.title, @post %></li>
<% end %>
<div class="container-fluid">
  <div class="row-fluid">
    <div class="span12">
      <div class="box">
        <div class="tab-header">
          <%= @post.title %>
          <%= link_to 'Edit', edit_post_path(@post), :class=>'btn btn-mini pull-right' %>
        </div>
        <div class="padded">
          <%= @post.content.html_safe %>
        </div>
      </div>
    </div>
  </div>
</div>
