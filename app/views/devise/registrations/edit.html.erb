<% content_for :breadcrumb do %>
<li class="active"><%= link_to 'Account', account_path %></li>
<% end %>
<div class="container-fluid">
  <div class="row-fluid">
    <div class="span12">
      <div class="box">
        <div class="tab-header">Account Settings</div>
        <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :class => 'form-horizontal' }) do |f| %>
          <div class="padded">
            <div class="row-fluid">
              <div class="span6">
                <h5>General Info</h5>
                <%= f.input :name %>
                <%= f.input :username %>
                <%= f.input :email, :required => true %>
              </div>
              <div class="span6">
                <h5>EVE Character API</h5>
                <%= f.input :apikey, :label => 'ID', :disabled => true %>
                <%= f.input :secretkey, :label => 'Verification Code', :disabled => true  %>
                <%= f.input :primary_character_id, :label => 'Primary Character', :disabled => true  %>
                <div class="controls">
                  <%= link_to 'Setup your Character API', api_path, :class=>'btn btn-mini' %>
                </div>
              </div>
            </div>
            <div class="row-fluid">
              <div class="span6">
                <h5>Change Password<h5>
                <%= f.input :password, :autocomplete => "off", :required => false, :label => 'New Password' %>
                <%= f.input :password_confirmation, :required => false %>
              </div>
              <div class="span6">
                <h5>EVE Corporation API</h5>
                <%= f.input :corp_apikey, :label => 'ID', :disabled => true %>
                <%= f.input :corp_apisecret, :label => 'Verification Code', :disabled => true  %>
                <div class="controls">
                  <%= link_to 'Setup your Corporation API', corp_api_path, :class=>'btn btn-mini' %>
                </div>
              </div>
            </div>
          </div>
          <div class="form-controls clearfix">
            <%= link_to "Delete my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete, :class=>"pull-left text-error mt10" %>
            <%= f.button :submit, 'Save', :class => 'btn-primary pull-right' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>